generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Device {
  id         Int         @id @default(autoincrement())
  publicKey  String
  credId     String
  counter    Int
  transports Transport[]
  userId     Int?
  User       User?       @relation(fields: [userId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
  devices   Device[]

  @@index([email])
}

model AuthRequest {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  challenge String   @unique
  rpId      String
  rpName    String
  email     String
}

enum Transport {
  ble
  internal
  nfc
  usb
}
